{
    "manifest_version": 2,
    "name": "ABN Plugin",
    "description": "This extension will provide ABN for testing",
    "version": "1.0",
    "browser_action": {
        "default_icon": "handy-abn-logo.png",
        "default_popup": "popup.html",
        "default_title": "ABN Helper"
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "permissions": [
        "activeTab",
        "contextMenus",
        "storage"
    ]
}